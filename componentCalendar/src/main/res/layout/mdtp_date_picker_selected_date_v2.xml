<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mdtp_day_picker_selected_date_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mdtp_date_picker_header_height"
    android:layout_weight="1"
    android:background="#0065b2"
    android:gravity="top"
    android:paddingTop="5dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleCustomCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marca los días o medios días en el calendario sin días de descanso"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginBottom="2dp"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Días de vacaciones"
            android:textSize="14sp"
            android:layout_marginBottom="2dp"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/daysAvailable"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="16 días"
            android:gravity="right"
            android:textSize="14sp"
            android:layout_marginBottom="2dp"
            android:textColor="#ffffff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Días seleccionados"
            android:textSize="16sp"
            android:layout_marginBottom="2dp"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/daysSelected"
            android:layout_weight="2.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0 días"
            android:textSize="16sp"
            android:gravity="right"
            android:layout_marginBottom="2dp"
            android:textColor="#ffffff"/>


    </LinearLayout>

    <com.wdullaer.datetimepickerholiday.AccessibleTextView
        android:id="@+id/mdtp_date_picker_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:background="@android:color/transparent"
        android:textColor="@color/mdtp_date_picker_selector"
        android:visibility="gone"
        android:textSize="@dimen/mdtp_datepicker_year_selection_text_size"
        tools:text="2015" />

    <com.wdullaer.datetimepickerholiday.AccessibleLinearLayout
        android:id="@+id/mdtp_date_picker_month_and_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:visibility="gone"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:textColor="@color/mdtp_date_picker_selector" >
        <TextView
            android:id="@+id/mdtp_date_picker_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:duplicateParentState="true"
            android:gravity="left"
            android:includeFontPadding="false"
            android:background="@android:color/transparent"
            android:textColor="@color/mdtp_date_picker_selector"
            android:textSize="@dimen/mdtp_datepicker_selection_text_size"
            tools:text="Fri, May 15"/>
    </com.wdullaer.datetimepickerholiday.AccessibleLinearLayout>

</LinearLayout>
