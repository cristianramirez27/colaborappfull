<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ctlContainer"
    android:padding="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="14dp"
        android:paddingLeft="14dp"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/day"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:textColor="#ffffff"
            android:background="@drawable/backgroud_circle_blue"
            android:text="12"
            android:gravity="center"
            android:textSize="12sp" />

        <TextView
            android:layout_toRightOf="@+id/day"
            android:id="@+id/monthLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c3c0c4"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="Octubre"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_toRightOf="@+id/monthLabel"
            android:id="@+id/layoutCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">

            <Switch
                android:id="@+id/halfDay"
                android:layout_toLeftOf="@+id/labelHalfDay"
                android:layout_centerVertical="true"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:theme="@style/SCBSwitch" />

            <TextView
                android:id="@+id/labelHalfDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#c3c0c4"
                android:layout_centerVertical="true"
                android:text="Medio dÃ­a"
                android:textSize="12sp" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>