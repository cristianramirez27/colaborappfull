<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_dialog_white_rounded"
        android:scrollbars="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerDialog"
            android:layout_width="match_parent"
            android:background="@drawable/background_dialog_yellow_rounded"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent">

        <com.coppel.rhconecta.dev.views.customviews.TicketView
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_marginTop="30dp"
                android:id="@+id/ticketView"
                app:ticketOrientation="horizontal"
                app:ticketBackgroundBeforeDivider="@color/colorPrimaryCoppelAzul"
                app:ticketScallopRadius="10dp"
                app:ticketShowBorder="false"
                app:ticketScallopPositionPercent="50"
                app:ticketDividerPositionPercent="0.35"
                app:ticketShowDivider="false"
                app:ticketCornerType="rounded"
                app:ticketCornerRadius="8dp"
                app:ticketDividerPadding="0dp"
                app:ticketElevation="14dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="30dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.0"/>

        <TextView
                android:text="Descuento Variable"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/text_label"
                app:layout_constraintTop_toBottomOf="@+id/percent_benefit"
                app:layout_constraintStart_toStartOf="@+id/ticketView"
                app:layout_constraintBottom_toBottomOf="@+id/ticketView"
                app:layout_constraintEnd_toStartOf="@+id/guideline3" android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" android:layout_marginStart="16dp" android:textAlignment="center"
                style="@style/TextBook12Coppel"/>
        <TextView
                android:id="@+id/percent_benefit"
                android:text="%"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/ticketView"
                app:layout_constraintBottom_toTopOf="@+id/text_label"
                app:layout_constraintStart_toStartOf="@+id/ticketView"
                app:layout_constraintVertical_chainStyle="packed" app:layout_constraintEnd_toStartOf="@+id/guideline3"
                android:textColor="@color/colorPrimaryCoppelAmarillo" android:textSize="24sp" android:textStyle="bold"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline3" app:layout_constraintGuide_percent="0.36"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:id="@+id/image"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/placeholder_discount"
                app:layout_constraintStart_toStartOf="@+id/guideline3"
                app:layout_constraintEnd_toEndOf="@+id/ticketView"
                app:layout_constraintTop_toTopOf="@+id/ticketView"
                app:layout_constraintHorizontal_bias="0.571"
                app:layout_constraintBottom_toBottomOf="@+id/ticketView" android:layout_marginEnd="24dp"
                android:layout_marginStart="16dp"/>
        <TextView
                android:text="@string/label_title_code"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/ticketView"
                app:layout_constraintEnd_toEndOf="@+id/ticketView"
                android:layout_height="wrap_content" android:id="@+id/textView5"
                app:layout_constraintHorizontal_bias="0.5"
                android:visibility="gone"
                android:textColor="@color/colorLabelCreateAccount"
                style="@style/TextBook12Coppel"
                app:layout_constraintBottom_toTopOf="@+id/textViewCode" android:layout_marginBottom="6dp"/>
        <TextView
                android:textColor="@color/colorTextCode"
                android:visibility="gone"
                android:layout_width="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/ticketView"
                app:layout_constraintStart_toStartOf="@+id/ticketView"
                app:layout_constraintEnd_toEndOf="@+id/ticketView"
                android:background="@color/colorBackgroundCode"
                android:textIsSelectable="true"
                android:layout_height="wrap_content" android:id="@+id/textViewCode"
                style="@style/TextMedium26Coppel"
                tools:layout_editor_absoluteX="172dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:layout_constraintBottom_toBottomOf="@+id/ticketView"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:minHeight="200dp"
            android:visibility="gone"
            android:layout_below="@+id/headerDialog" app:layout_constraintBottom_toTopOf="@+id/btnAdvertising"
            app:layout_constraintTop_toBottomOf="@+id/headerDialog"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:scrollbars="vertical">

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/company"
                      android:layout_alignParentStart="true"
                      android:layout_alignParentTop="true"
                      style="@style/TextBold16Coppel"
                      android:textColor="@color/colorTextGrayCompany"
                      android:layout_marginTop="8dp"
                      />
            <TextView
                    android:id="@+id/txtDiscountQuantity"
                    android:layout_below="@+id/company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lineto_circular_pro_bold"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:maxLines="2"
                    android:textColor="@color/colorTextGrayDark"
                    android:textSize="30sp"/>

            <TextView
                    android:layout_below="@+id/txtDiscountQuantity"
                    android:id="@+id/txtDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lineto_circular_pro_bold"
                    android:gravity="center"
                    android:maxLines="1"
                    android:visibility="gone"
                    android:textColor="@color/colorTextGrayDark"
                    android:textSize="14sp"/>

            <TextView
                    android:layout_below="@+id/txtDiscount"
                    android:id="@+id/txtDescription"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:textColor="@color/colorTextGrayDark"
                    style="@style/TextBook16Coppel"/>

            <TextView
                    android:layout_below="@+id/txtDescription"
                    android:id="@+id/txtInformation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"
                    android:gravity="left"
                    android:text="Más información:"
                    android:textColor="@color/colorTextGrayDark"
                    style="@style/TextBook14Coppel"/>

            <TextView
                    android:layout_below="@+id/txtInformation"
                    android:id="@+id/txtNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:textColor="@color/colorTextGrayDark"
                    style="@style/TextBook14Coppel"/>

            <TextView
                    android:layout_below="@+id/txtNote"
                    android:id="@+id/txtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:scrollbars="vertical"
                    android:gravity="left"
                    android:fontFamily="@font/lineto_circular_pro_book"
                    android:textColor="@color/colorTextGrayDark"
                    android:textSize="13sp"/>

            <TextView
                    android:layout_below="@+id/txtAddress"
                    android:id="@+id/txtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="phone"
                    android:scrollbars="vertical"
                    android:textColorLink="@color/colorPrimaryCoppelAzul"
                    android:fontFamily="@font/lineto_circular_pro_book"
                    android:gravity="left"
                    android:textColor="@color/colorTextGrayDark"
                    android:textSize="13sp"/>

        </RelativeLayout>

    </ScrollView>

    <Button
            android:id="@+id/btnCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSecondBlueCoppel"
            android:text="Generar Codigo"
            android:textAllCaps="false"
            android:textColor="@color/colorBackgroundCoppelBlanco"
            style="@style/ButtonCoppel"
            android:layout_toStartOf="@id/btnAdvertising"
            android:layout_alignStart="@id/btnAdvertising"
            android:layout_alignBottom="@id/btnCode"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            android:visibility="gone"
            android:layout_marginEnd="16dp"/>
    <Button
            android:id="@+id/btnAdvertising"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSecondBlueCoppel"
            android:text="Publicidad de la empresa"
            android:textAllCaps="false"
            android:visibility="gone"
            android:textColor="@color/colorBackgroundCoppelBlanco"
            style="@style/ButtonCoppel"
            android:layout_below="@+id/scrollview"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toTopOf="@+id/btnCode"
            android:layout_marginBottom="16dp"/>
    <TextView
            android:text="@string/label_more_information"
            android:background="@drawable/background_dialog_white_rounded_button"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:elevation="16dp"
            android:gravity="center"
            style="@style/TextMedium14Coppel"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnAdvertising"
            android:id="@+id/textView4" app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>