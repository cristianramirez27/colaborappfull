<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:orientation="vertical"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">



            <LinearLayout
                android:id="@+id/layoutGte"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/gteTitle"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lineto_circular_pro_book"
                    android:text="Gerente"
                    android:textColor="@color/colorTextGrayDark"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/nombreGte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lineto_circular_pro_book"
                    android:textSize="13sp"
                    android:layout_marginBottom="6dp"
                    android:textColor="@color/colorBackgroundCoppelNegro" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dateLayout"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBackgroundGray"/>

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lineto_circular_pro_book"
                    android:text="Fecha de rechazo"
                    android:textColor="@color/colorTextGrayDark"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/fechaRechazo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lineto_circular_pro_book"
                    android:text=""
                    android:textSize="13sp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_marginBottom="6dp"
                    android:textColor="@color/colorBackgroundCoppelNegro" />
            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorBackgroundGray"/>

                <TextView
                    android:id="@+id/txtReason"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lineto_circular_pro_book"
                    android:text="Motivo de rechazo"
                    android:textColor="@color/colorTextGrayDark"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/motivoRechazo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lineto_circular_pro_book"
                    android:text="@string/lorem"
                    android:maxLength="150"
                    android:textSize="13sp"   android:layout_marginBottom="6dp"
                    android:textColor="@color/colorBackgroundCoppelNegro" />
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</LinearLayout>



