<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/constraintLayout"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@color/background_calculator"
                                                   tools:context=".presentation.calculator.dashboard.FirstStepFragment">

    <include layout="@layout/head_fragment_calculator"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/section_label"
            android:layout_marginTop="@dimen/section_information_dashboard_top_calculator"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="8dp"
            android:layout_marginStart="@dimen/section_information_dashboard_sides_calculator"
            android:layout_marginEnd="@dimen/section_information_dashboard_sides_calculator"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/cardView">
        <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                      android:orientation="vertical"
                                                      android:layout_height="wrap_content">

            <TextView
                    android:text="@string/text_dashboard_calculator"
                    style="@style/TextMedium14CoppelCalculator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView17"
                    android:elevation="1dp"
                    android:paddingTop="@dimen/section_information_text_dashboard_top_calculator"
                    android:paddingBottom="@dimen/section_information_text_dashboard_top_calculator"
                    android:paddingLeft="20dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="#efefef"
                    android:layout_height="wrap_content">

                <TextView
                        android:text="@string/text_age_information_calculator"
                        style="@style/TextBook14CoppelCalculator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView19"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/section_information_dashboard_top_calculator"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/section_information_text_dashboard_sides_calculator"/>
                <TextView
                        android:text="@string/text_years_information_calculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/textView18"
                        style="@style/TextBook14CoppelCalculator"
                        app:layout_constraintTop_toBottomOf="@+id/textView19"
                        android:layout_marginTop="@dimen/section_information_text_dashboard_top_calculator"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/section_information_text_dashboard_sides_calculator"
                        app:layout_constraintEnd_toStartOf="@+id/textView22" android:layout_marginEnd="8dp"/>
                <TextView
                        android:text="@string/text_salary_information_calculator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/textView20"
                        style="@style/TextBook14CoppelCalculator"
                        app:layout_constraintTop_toBottomOf="@+id/textView18"
                        android:layout_marginTop="@dimen/section_information_text_dashboard_top_calculator"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/section_information_text_dashboard_sides_calculator"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="@dimen/section_information_text_dashboard_top_calculator"
                        app:layout_constraintEnd_toStartOf="@+id/textView23" android:layout_marginEnd="8dp"/>
                <TextView
                        android:text="40 años"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView21"
                        style="@style/TextBook14CoppelCalculator"
                        android:layout_marginTop="@dimen/section_information_dashboard_top_calculator"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="@dimen/section_information_text_dashboard_sides_calculator"/>
                <TextView
                        android:text="10 años 11 meses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView22"
                        android:layout_marginTop="@dimen/section_information_text_dashboard_top_calculator"
                        style="@style/TextBook14CoppelCalculator"
                        app:layout_constraintTop_toBottomOf="@+id/textView21"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/section_information_text_dashboard_sides_calculator"/>
                <TextView
                        android:text="$22,000 MXN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView23"
                        style="@style/TextBook14CoppelCalculator"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/section_information_text_dashboard_top_calculator"
                        android:layout_marginEnd="@dimen/section_information_text_dashboard_sides_calculator"
                        app:layout_constraintTop_toBottomOf="@+id/textView22"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="@dimen/section_information_text_dashboard_top_calculator"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="@dimen/title_dashboard_top_calculator"
            android:layout_marginStart="@dimen/section_information_dashboard_sides_calculator"
            app:layout_constraintTop_toBottomOf="@+id/cardView" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/cardView2">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorGrayCalculator">

            <View android:layout_width="4dp"
                  android:layout_height="0dp"
                  android:id="@+id/separator"
                  android:background="@drawable/backgroud_rounder_yellow_calculator"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:text="@string/text_period_information_calculator"
                    android:layout_width="wrap_content"
                    style="@style/TextBold14CoppelBlack"
                    android:layout_height="wrap_content" android:id="@+id/textView24"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="24dp" android:layout_marginStart="24dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"/>
            <TextView
                    android:text="@string/amount_example_dashboard_information"
                    android:layout_width="wrap_content"
                    style="@style/TextBook16CoppelCalculator"
                    android:layout_height="wrap_content" android:id="@+id/textView25"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="24dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="@dimen/title_dashboard_top_calculator"
            android:layout_marginStart="@dimen/section_information_dashboard_sides_calculator"
            android:layout_marginEnd="@dimen/section_information_dashboard_sides_calculator"
            app:layout_constraintTop_toBottomOf="@+id/cardView2" android:id="@+id/cardView3"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent">
        <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                      android:layout_height="wrap_content"
        android:orientation="vertical">
            <TextView
                    android:text="@string/text_dashboard_saving"
                    style="@style/TextMedium13CoppelCalculator"
                    android:elevation="1dp"
                    android:drawableRight="@drawable/ic_arrow_down"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView26" android:gravity="center_vertical"
                    android:paddingRight="24dp" android:paddingBottom="16dp" android:paddingTop="16dp"
                    android:paddingLeft="8dp"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/rvItems"/>
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               android:background="@color/colorTextCode">


                <TextView
                        android:text="@string/text_dashboard_total"
                        style="@style/TextBold22CoppelCalculator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView30"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"/>
                <TextView
                        android:text="$210,200"
                        style="@style/TextBold36CoppelCalculator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView31"
                        android:layout_marginEnd="24dp"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="24dp"/>
                <TextView
                        android:text="@string/text_dashboard_currency"
                        style="@style/TextBook14CoppelCalculator"
                        android:textColor="@android:color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView32"
                        app:layout_constraintTop_toBottomOf="@+id/textView31"
                        android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="@+id/textView31"/>
                <ImageView
                        android:src="@drawable/ic_cash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/imageView7"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView30"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.cardview.widget.CardView>
    <Button
            android:text="@string/text_dashboard_button"
            style="@style/ButtonCoppelCalculator"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/button6"
            app:layout_constraintTop_toBottomOf="@+id/cardView3" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/button_dashboard_top_information"
            android:layout_marginStart="@dimen/button_dashboard_sides_information"
            android:layout_marginEnd="@dimen/button_dashboard_sides_information"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/button_dashboard_bottom_information"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>