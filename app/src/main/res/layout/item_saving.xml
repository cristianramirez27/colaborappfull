<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="@dimen/title_dashboard_top_calculator"
        android:layout_marginStart="@dimen/section_information_dashboard_sides_calculator"
        android:layout_marginEnd="@dimen/section_information_dashboard_sides_calculator"
        app:layout_constraintTop_toBottomOf="@+id/cardView" android:id="@+id/cardView3"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                  android:layout_height="wrap_content"
                                                  android:orientation="vertical">
        <TextView
                android:text="@string/text_dashboard_saving"
                style="@style/TextMedium13CoppelCalculator"
                android:drawableRight="@drawable/ic_arrow_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView26" android:gravity="center_vertical"
                android:paddingRight="24dp" android:paddingBottom="16dp" android:paddingTop="16dp"
                android:paddingLeft="8dp"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/rvItems"/>
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:background="@color/colorTextCode">


            <TextView
                    android:text="@string/text_dashboard_total"
                    style="@style/TextBold22CoppelCalculator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView30"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView59"/>
            <TextView
                    android:text="$210,200"
                    style="@style/TextBold36CoppelCalculator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView31"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView59"
                    android:layout_marginTop="24dp"/>
            <TextView
                    android:text="@string/text_dashboard_currency"
                    style="@style/TextBook14CoppelCalculator"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView32"
                    app:layout_constraintTop_toBottomOf="@+id/textView31"
                    android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="@+id/textView31"/>
            <ImageView
                    android:src="@drawable/ic_cash_calculator"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/imageView7"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView32" app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:text=""
                    style="@style/TextBook12Coppel"
                    android:textColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView59"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>