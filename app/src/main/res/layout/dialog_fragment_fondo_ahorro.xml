<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ctlReady"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:minHeight="330dp"
        android:background="@drawable/background_blue_light_rounded">

        <RelativeLayout
            android:id="@+id/layoutImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgvAction"
                android:layout_width="125dp"
                android:layout_height="116dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_sent" />

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/layoutImage"
            android:id="@+id/layoutContent"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="130dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <TextView
                android:id="@+id/txvAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                style="@style/TextBook14Coppel"
                android:text="Tu solicitud de retiro fue capturada con éxito"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/txvFolio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txvAction"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="2dp"
                android:text="Folio: fdsfsdfsdfsdf"
                android:textColor="@android:color/white"
                style="@style/TextBook14Coppel"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txvFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txvAction"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="2dp"
                android:text="Folio: fdsfsdfsdfsdf"
                android:textColor="@android:color/white"
                style="@style/TextBook14Coppel"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txvHora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txvAction"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="2dp"
                android:text="Hora: fdsfsdfsdfsdf"
                android:textColor="@android:color/white"
                style="@style/TextBook14Coppel"
                android:visibility="visible" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_below="@+id/layoutContent"
            android:id="@+id/btnActionAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/background_white_rounded"
            android:text="@string/accept"
            android:textAllCaps="false"
            style="@style/ButtonCoppel"
            android:textColor="@color/colorSecondBlueCoppel"/>

    </RelativeLayout>

</RelativeLayout>