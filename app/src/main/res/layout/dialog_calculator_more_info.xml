<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">
        <TextView
                style="@style/TextBold20CoppelCalculator"
                android:text="@string/title_more_calculation_dialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textView11"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:gravity="center"
                android:paddingTop="@dimen/title_dialog_privacy_top_calculator"
                android:paddingBottom="@dimen/title_dialog_privacy_top_calculator"
                android:paddingLeft="@dimen/title_dialog_privacy_sides_calculator"
                android:paddingRight="@dimen/title_dialog_privacy_sides_calculator"/>
        <TextView
                android:text="@string/text_more_calculation_dialog"
                style="@style/TextBook14CoppelCalculator"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textView46"
                app:layout_constraintTop_toBottomOf="@+id/textView11"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
                android:textAlignment="gravity"/>
        <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp" app:srcCompat="@drawable/ic_close_blue"
                android:id="@+id/imageView10"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="20dp" android:layout_marginTop="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>