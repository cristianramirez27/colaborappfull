<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.visionaries.VisionariesActivity">

    <fragment
        android:id="@+id/pollToolbarFragment"
        android:name="com.coppel.rhconecta.dev.presentation.poll_toolbar.PollToolbarFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvVisionaries"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:listitem="@layout/fila_lista_videos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pollToolbarFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ProgressBar
        android:id="@+id/pbLoader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/rvVisionaries"
        app:layout_constraintTop_toTopOf="@id/rvVisionaries"
        app:layout_constraintEnd_toEndOf="@id/rvVisionaries"
        app:layout_constraintBottom_toBottomOf="@id/rvVisionaries"/>

</androidx.constraintlayout.widget.ConstraintLayout>