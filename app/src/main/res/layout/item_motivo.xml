<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:id="@+id/container_notinvasive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/txtMotivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lineto_circular_pro_book"
            android:text="Capacitacion"
            android:layout_centerHorizontal="true"
            android:textSize="13sp"
            android:textColor="@color/colorBackgroundCoppelNegro" />

        <View
            android:id="@+id/viewDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/colorBackgroundGray"/>


        <TextView
            android:layout_gravity="bottom|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lineto_circular_pro_book"
            android:visibility="visible"
            android:text="@string/title_desc_reason"
            android:layout_centerHorizontal="true"
            android:textSize="11sp"
            android:textColor="@color/colorTextGray" />

        <TextView
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/txtMotivoDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lineto_circular_pro_book"
            android:layout_marginTop="5dp"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s."
            android:layout_centerHorizontal="true"
            android:textSize="13sp"
            android:textColor="@color/colorBackgroundCoppelNegro" />




    </LinearLayout>

</RelativeLayout>

