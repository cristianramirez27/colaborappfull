<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:minHeight="280dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/ctlReady"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:paddingBottom="26dp"
        android:paddingTop="30dp"
        android:background="@drawable/background_blue_light_rounded">

        <ImageView
            android:id="@+id/imgvAction"
            android:layout_width="105dp"
            android:layout_height="105dp"
            app:srcCompat="@drawable/ic_sent"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_below="@+id/imgvAction"
            android:id="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <TextView
                android:id="@+id/txvHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/lineto_circular_pro_book"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:padding="2dp"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/lineto_circular_pro_book"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/txvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txvAction"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/lineto_circular_pro_book"
                android:gravity="center"
                android:padding="2dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:visibility="visible" />

        </LinearLayout>


        <LinearLayout
            android:layout_below="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnActionCancel"
                android:layout_weight="1"
                android:visibility="visible"
                android:layout_width="match_parent"
               android:layout_marginRight="8dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_white_rounded"
                android:fontFamily="@font/lineto_circular_pro_book"
                android:text="@string/no"
                android:textAllCaps="false"
                android:textColor="@color/colorSecondBlueCoppel"
                android:textSize="16sp" />


            <Button
                android:id="@+id/btnActionAccept"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_white_rounded"
                android:fontFamily="@font/lineto_circular_pro_book"
                android:text="@string/yes"
                android:textAllCaps="false"
                android:textColor="@color/colorSecondBlueCoppel"
                android:textSize="16sp" />

        </LinearLayout>




    </RelativeLayout>

</RelativeLayout>