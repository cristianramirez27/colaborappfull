<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="@color/colorBackgroundFragments"
    tools:context=".views.fragments.PayrollVoucherFragment">


    <android.support.v7.widget.CardView
        android:id="@+id/cardViewSearch"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="@dimen/margin_general"
        app:cardElevation="8dp"
        app:cardCornerRadius="1dp"
        app:cardBackgroundColor="@color/colorBackgroundCoppelBlanco">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iconSearch"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_centerVertical="true"
                android:padding="4dp"
                android:src="@drawable/ic_play_button"/>

            <EditText
                android:layout_toRightOf="@+id/iconSearch"
                android:id="@+id/edtSearch"
                android:background="@null"
                android:hint="@string/hint_search"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/colorTextBlueCoppel"
                android:textColorHint="@color/colorTextBlueCoppel"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:id="@+id/layoutChangeCity"
        android:layout_below="@+id/cardViewSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/txtCuliacan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lineto_circular_pro_medium"
            android:text="@string/are_you_in_culiacan"
            android:padding="4dp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorTextGrayDark"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/titleChangeCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtCuliacan"
            android:fontFamily="@font/lineto_circular_pro_medium"
            android:text="@string/change_city"
            android:padding="4dp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorSecondBlueCoppel"
            android:textSize="14sp" />


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcvBenefits"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/layoutChangeCity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>