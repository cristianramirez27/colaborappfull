<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:layout_height="@dimen/push_snackbar_height"
        android:visibility="visible">


        <RelativeLayout
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ciudadOrigen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/lineto_circular_pro_book"
                android:layout_gravity="bottom|center_horizontal"
                android:gravity="left|center_vertical"
                android:text="CLCL (CuliacÃ¡n)"
                android:textColor="@color/colorBackgroundCoppelNegro"
                android:textSize="11sp"
                android:minHeight="20dp"
                android:visibility="visible" />

            <TextView
                android:layout_gravity="bottom|center_horizontal"
                android:id="@+id/fechaSalida"
                android:layout_below="@+id/ciudadOrigen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lineto_circular_pro_book"
                android:gravity="left|center_vertical"
                android:visibility="visible"
                android:text="20/04/2019"
                android:textSize="11sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorTextGrayDark" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="bottom|center_horizontal"
                android:id="@+id/ciudadDestino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="20dp"
                android:gravity="left|center_vertical"
                android:fontFamily="@font/lineto_circular_pro_book"
                android:visibility="visible"
                android:text="MNTY (Monterrey)"
                android:layout_centerHorizontal="true"
                android:maxLines="2"
                android:textSize="11sp"
                android:textColor="@color/colorBackgroundCoppelNegro" />


            <TextView
                android:layout_gravity="bottom|center_horizontal"
                android:id="@+id/fechaLlegada"
                android:layout_below="@+id/ciudadDestino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:fontFamily="@font/lineto_circular_pro_book"
                android:visibility="visible"
                android:text="20/04/2019"
                android:textSize="11sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorTextGrayDark" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1.1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom|center_horizontal"
                app:srcCompat="@drawable/ic_autobus"
                android:textColor="@color/colorBackgroundCoppelNegro"
                android:textSize="11sp"
                android:visibility="visible" />

            <TextView
                android:layout_gravity="bottom|center_horizontal"
                android:id="@+id/numNoches"
                android:layout_below="@+id/imgIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lineto_circular_pro_book"
                android:gravity="center"
                android:visibility="visible"
                android:text="2"
                android:textSize="11sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorTextGrayDark" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>

