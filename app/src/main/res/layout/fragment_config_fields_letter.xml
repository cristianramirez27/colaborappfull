<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:background="@color/colorBackgroundFragments"
    tools:context=".views.fragments.PayrollVoucherFragment">

    <TextView
        android:id="@+id/titleLetters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/customize_letter"
        android:paddingRight="20dp"
        style="@style/TextBold20Coppel"
        android:paddingLeft="20dp"
        android:textColor="@color/colorSecondBlueCoppel"/>

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/titleLetters"
        android:layout_above="@+id/btnNext"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardCornerRadius="1dp"
        app:cardBackgroundColor="@color/colorBackgroundCoppelBlanco">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_blue_rounded"
        android:layout_marginLeft="45dp"
        style="@style/ButtonCoppel"
        android:layout_marginRight="45dp"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true" />

</RelativeLayout>