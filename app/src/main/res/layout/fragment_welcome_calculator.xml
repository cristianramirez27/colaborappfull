<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGrayCalculator"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/colorGrayCalculator"
            android:layout_height="match_parent"
            tools:context=".presentation.calculator.welcome.WelcomeCalculatorFragment">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextBold20CoppelCalculator"
                android:text="@string/title_welcome_calculator" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginEnd="@dimen/title_sides_calculator"
                android:layout_marginStart="@dimen/title_sides_calculator"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/title_top_calculator" android:id="@+id/textView6"/>
        <ImageView
                android:src="@drawable/ic_welcome_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/image_top_calculator"
                android:layout_marginEnd="@dimen/image_sides_calculator"
                android:layout_marginStart="@dimen/image_sides_calculator"/>

        <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@drawable/backgroud_rounder_blue" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageView3"
                android:layout_marginTop="@dimen/separation_separator_top_calculator"
                android:layout_marginEnd="@dimen/separation_separator_sides_calculator"
                android:layout_marginStart="@dimen/separation_separator_sides_calculator" android:id="@+id/view8">
        </View>
        <TextView
                android:text="@string/subtitle_welcome_calculator"
                android:layout_width="0dp"
                style="@style/TextBook14CoppelCalculator"
                android:layout_height="wrap_content" android:id="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/view8"
                android:layout_marginTop="@dimen/image_top_calculator"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/subtitle_sides_calculator"
                android:layout_marginEnd="@dimen/subtitle_sides_calculator"/>
        <CheckBox
                android:layout_width="wrap_content"
                android:buttonTint="@color/colorCheckCalculator"
                android:layout_height="wrap_content" android:id="@+id/checkBox"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                android:layout_marginTop="@dimen/checkbox_top_calculator" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/subtitle_sides_calculator"/>
        <TextView
                android:text="@string/title_checkbox_welcome_calculator"
                android:layout_width="0dp"
                style="@style/TextBook14CoppelCalculator"
                android:layout_height="wrap_content" android:id="@+id/textView8"
                app:layout_constraintStart_toEndOf="@+id/checkBox" app:layout_constraintTop_toTopOf="@+id/checkBox"
                app:layout_constraintBottom_toBottomOf="@+id/checkBox" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/checkbox_sides_calculator"/>
        <Button
                android:text="@string/button_welcome_calculator"
                android:layout_width="0dp"
                style="@style/ButtonCoppelCalculator"
                android:layout_height="wrap_content" android:id="@+id/button3"
                app:layout_constraintTop_toBottomOf="@+id/checkBox"
                android:layout_marginTop="@dimen/image_top_calculator" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/button_sides_calculator"
                android:layout_marginEnd="@dimen/button_sides_calculator"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>