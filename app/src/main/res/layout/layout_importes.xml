<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_margin="4dp">

    <TextView
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lineto_circular_pro_bold"
        android:visibility="visible"
        android:text="Importes"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBackgroundCoppelNegro" />

    <LinearLayout
        android:id="@+id/headerItinerario"
        android:layout_width="match_parent"
        android:padding="8dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:visibility="visible">


        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/rcvImporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <com.coppel.rhconecta.dev.views.customviews.TextViewDetail
        android:id="@+id/totalesImports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.coppel.rhconecta.dev.views.customviews.TextViewDetail>


</LinearLayout>

