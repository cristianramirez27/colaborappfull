<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootView"
    android:orientation="vertical" >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBar"
        android:animateLayoutChanges="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tbActionBar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                style="@style/TextMedium18Coppel"
                app:title="@string/title_home"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/eliminateOption"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lineto_circular_pro_medium"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/authorizeOption"
                    android:text="@string/title_eliminate"
                    android:textColor="@color/red_text"
                    android:padding="6dp"
                    android:layout_marginRight="6dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/authorizeOption"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lineto_circular_pro_medium"
                    android:layout_centerVertical="true"
                    android:text="Autorizar"
                    android:textColor="@color/colorGreen"
                    android:layout_alignParentRight="true"
                    android:padding="6dp"
                    android:layout_marginRight="16dp"
                    android:textSize="14sp" />

            </RelativeLayout>

        </RelativeLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_below="@+id/appBar"
        android:id="@+id/contentFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/bordeAmarillo"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/appBar"
        android:background="@drawable/bg_gradient_grey" />

</RelativeLayout>