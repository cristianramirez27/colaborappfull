<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@android:color/transparent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/background_dialog_white_rounded"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            app:cardCornerRadius="6dp"
            android:layout_margin="2dp"
            app:cardBackgroundColor="@color/colorBackgroundCoppelBlanco">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:fontFamily="@font/lineto_circular_pro_medium"
                    android:text="@string/title_control_aditional_days"
                    android:textColor="@color/colorSecondBlueCoppel"
                    android:textSize="22sp" />

                <LinearLayout
                    android:id="@+id/layoutPendingDays"
                    android:layout_below="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:fontFamily="@font/lineto_circular_pro_medium"
                        android:text="@string/title_add_aditional_days_pending"
                        android:textColor="@color/colorTextCoppelNegro"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/pendigDays"
                                android:layout_width="match_parent"
                                android:gravity="center"
                                android:padding="2dp"
                                android:textSize="28sp"
                                android:textColor="@color/colorTextGray"
                                android:text="2"
                                android:fontFamily="@font/lineto_circular_pro_bold"
                                android:inputType="text"
                                android:layout_height="50dp" />

                        </RelativeLayout>

                        <View
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_below="@+id/layoutPendingDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:fontFamily="@font/lineto_circular_pro_medium"
                        android:text="@string/title_add_aditional_days"
                        android:textColor="@color/colorTextCoppelNegro"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingRight="12dp">

                            <TextView
                                android:id="@+id/btnMinus"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:gravity="center"
                                android:fontFamily="@font/lineto_circular_pro_medium"
                                android:textColor="@color/colorSecondBlueCoppel"
                                android:textSize="46sp"
                                android:layout_alignParentRight="true"
                                android:text="-"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">

                            <EditText
                                android:id="@+id/currentDays"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:textSize="28sp"
                                android:padding="4dp"
                                android:enabled="false"
                                android:text="2"
                                android:lines="1"
                                android:textColor="@color/colorTextGray"
                                android:imeOptions="actionNext"
                                android:importantForAutofill="no"
                                android:fontFamily="@font/lineto_circular_pro_bold"
                                android:background="@drawable/background_gray_rounded" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_weight="1"
                            android:paddingLeft="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/btnPlus"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:gravity="center"
                                android:fontFamily="@font/lineto_circular_pro_medium"
                                android:textColor="@color/colorSecondBlueCoppel"
                                android:textSize="46sp"
                                android:layout_alignParentLeft="true"
                                android:text="+"/>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutBtns"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnCancelControl"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_blue_rounded"
                        android:fontFamily="@font/lineto_circular_pro_book"
                        android:text="@string/cancel"
                        android:textAllCaps="false"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorBackgroundCoppelBlanco"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnNextControl"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_blue_rounded"
                        android:fontFamily="@font/lineto_circular_pro_book"
                        android:text="@string/btn_title_next"
                        android:textAllCaps="false"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorBackgroundCoppelBlanco"
                        android:textSize="16sp" />

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"/>

</LinearLayout>