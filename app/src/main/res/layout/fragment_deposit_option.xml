<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundFragments"
    android:fillViewport="true"
    tools:context=".views.fragments.LoanSavingFundFragment">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_margin="4dp">

           <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                        android:padding="8dp"
                       android:orientation="vertical">

                       <com.coppel.rhconecta.dev.views.customviews.EditTextMoney
                           android:id="@+id/edtAbonoActual"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:visibility="visible"/>


                       <com.coppel.rhconecta.dev.views.customviews.EditTextMoney
                           android:id="@+id/edtAbonoCambiar"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginBottom="30dp"
                           android:visibility="visible" />

               <TextView
                   android:id="@+id/txvTitle"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/lineto_circular_pro_book"
                   android:text="@string/payment_way"
                   android:textColor="@color/colorSavingHeaderText"
                   android:textSize="14sp"
                   android:paddingTop="8dp"
                   android:paddingBottom="8dp" />


               <RelativeLayout
                   android:id="@+id/layoutState"
                   android:layout_below="@+id/title"
                   android:layout_width="match_parent"
                   android:background="@drawable/background_line_bottom"
                   android:layout_height="48dp"
                   android:clickable="true">

                   <EditText
                       android:id="@+id/payment"
                       android:layout_width="match_parent"
                       android:duplicateParentState="true"
                       android:textColor="@color/colorBackgroundCoppelBlanco"
                       android:fontFamily="@font/lineto_circular_pro_medium"
                       android:background="@null"
                       android:textColorHint="@color/hint_text_color"
                       android:enabled="false"
                       android:clickable="false"
                       android:layout_centerVertical="true"
                       android:gravity="center_vertical"
                       android:textSize="16sp"
                       android:textAllCaps="false"
                       android:paddingLeft="8dp"
                       android:layout_height="60dp">
                   </EditText>

                   <ImageView
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:layout_alignParentRight="true"
                       android:duplicateParentState="true"
                       android:clickable="false"
                       android:layout_centerVertical="true"
                       android:padding="6dp"
                       android:src="@drawable/ic_down_arrow_blue"/>

               </RelativeLayout>


               <TextView
                   android:id="@+id/totalImporte"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/lineto_circular_pro_bold"
                   android:gravity="center"
                   android:maxLines="1"
                   android:layout_marginTop="30dp"
                   android:layout_marginBottom="14dp"
                   android:textAllCaps="true"
                   android:text="@string/totalRemove"
                   android:textColor="@color/colorPrimaryCoppelAzul"
                   android:textSize="14sp" />



                   </LinearLayout>

       </RelativeLayout>

    </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>