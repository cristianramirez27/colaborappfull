<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="@string/title_dialog_score"
            style="@style/TextMedium20CoppelCalculator"
            android:background="@color/colorBlueCalculator"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/textView11"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:gravity="center"
            android:paddingTop="@dimen/title_dialog_score_calculator_sides"
            android:paddingBottom="@dimen/title_dialog_score_calculator_sides"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_close" android:id="@+id/imageView10"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="16dp"/>

    <TextView
            android:text="@string/question_dialog_score"
            android:layout_width="0dp"
            style="@style/TextBook16Coppel"
            android:textColor="@color/text_color_question_calculator"
            android:layout_height="wrap_content" android:id="@+id/textView69"
            app:layout_constraintTop_toBottomOf="@+id/textView11" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/question_dialog_score_calculator_sides"
            android:layout_marginEnd="@dimen/question_dialog_score_calculator_sides"
            android:layout_marginTop="@dimen/item_dialog_score_calculator_top"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:max="4"
            android:stepSize="1"
            style="@style/CustomRatingBarStyle"
            android:layout_height="wrap_content" android:id="@+id/ratingBar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView69"
            android:layout_marginEnd="@dimen/question_dialog_score_calculator_sides"
            android:layout_marginStart="@dimen/question_dialog_score_calculator_sides"
            android:layout_marginTop="@dimen/question_dialog_score_calculator_top"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorGrayCalculator"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/constraintLayout5" android:layout_marginTop="@dimen/item_dialog_score_calculator_top">

        <TextView
                android:text="@string/question_comment_dialog_score"
                android:layout_width="0dp"
                style="@style/TextBook16Coppel"
                android:textColor="@color/text_color_question_calculator"
                android:layout_height="wrap_content" android:id="@+id/textView70"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/item_dialog_score_calculator_top"
                android:layout_marginStart="@dimen/question_dialog_score_calculator_sides"
                android:layout_marginEnd="@dimen/question_dialog_score_calculator_sides"/>
        <EditText
                style="@style/EdithCommentTextCoppelCalculator"
                android:layout_width="0dp"
                android:maxLength="300"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:gravity="start|top"
                android:ems="10"
                android:id="@+id/editTextTextMultiLine"
                app:layout_constraintTop_toBottomOf="@+id/textView70" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/comment_dialog_score_calculator_top"
                android:layout_marginStart="@dimen/question_dialog_score_calculator_sides"
                android:layout_marginEnd="@dimen/question_dialog_score_calculator_sides"/>
        <TextView
                android:text="@string/question_comment2_dialog_score"
                android:layout_width="0dp"
                style="@style/TextBook16Coppel"
                android:textColor="@color/text_color_question_calculator"
                android:layout_height="wrap_content" android:id="@+id/textView71"
                app:layout_constraintTop_toBottomOf="@+id/editTextTextMultiLine"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/question_dialog_score_calculator_sides"
                android:layout_marginEnd="@dimen/question_dialog_score_calculator_sides"
                android:layout_marginTop="@dimen/question_dialog_score_calculator_top"/>
        <EditText
                style="@style/EdithCommentTextCoppelCalculator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLength="300"
                android:inputType="textMultiLine"
                android:gravity="start|top"
                android:id="@+id/editTextTextMultiLine2"
                app:layout_constraintTop_toBottomOf="@+id/textView71" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/comment_dialog_score_calculator_top"
                android:layout_marginEnd="@dimen/question_dialog_score_calculator_sides"
                android:layout_marginStart="@dimen/question_dialog_score_calculator_sides"
                android:layout_marginBottom="@dimen/item_dialog_score_calculator_top"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
            android:text="@string/button_dialog_score"
            style="@style/ButtonCoppelCalculator"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/button11"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout5"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/item_dialog_score_calculator_top"
            android:layout_marginBottom="@dimen/item_dialog_score_calculator_top"
            android:layout_marginStart="@dimen/button_dialog_score_calculator_top"
            android:layout_marginEnd="@dimen/button_dialog_score_calculator_top"/>

</androidx.constraintlayout.widget.ConstraintLayout>