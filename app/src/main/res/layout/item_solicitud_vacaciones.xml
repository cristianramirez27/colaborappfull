<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:id="@+id/cardview"
    app:cardElevation="2dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="1dp"
    android:layout_marginLeft="1dp"
    card_view:cardBackgroundColor="@color/colorBackgroundCoppelBlanco"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/layoutRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <RelativeLayout
            android:id="@+id/cbxLayout"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_width="30dp"
            android:paddingTop="4dp"
            android:layout_height="wrap_content">

            <CheckBox
                android:theme="@style/MyCheckBox"
                android:id="@+id/checkboxElement"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:checked="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_toRightOf="@+id/cbxLayout"
            android:layout_width="match_parent"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="8dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <RelativeLayout
                android:visibility="visible"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:id="@+id/layoutEstatusContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/layoutEstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/estatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:fontFamily="@font/lineto_circular_pro_book"
                        android:gravity="left|center_vertical"
                        android:layout_alignParentLeft="true"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textColor="@color/colorBackgroundCoppelBlanco"
                        android:textSize="13sp"
                        android:visibility="visible" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/ic_solicitud"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:gravity="left|center_vertical"
                    android:layout_centerVertical="true"
                    android:visibility="visible"
                    android:adjustViewBounds="true"
                    android:padding="2dp"
                    android:scaleType="centerInside" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:fontFamily="@font/lineto_circular_pro_book"
                    android:gravity="left|center_vertical"
                    android:layout_alignParentLeft="true"
                    android:text="@string/title_date_start"
                    android:textColor="@color/colorTextGrayDark"
                    android:textSize="13sp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/fechaInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lineto_circular_pro_book"
                    android:layout_alignParentRight="true"
                    android:gravity="left|center_vertical"
                    android:visibility="visible"
                    android:text="Miércoles, 15-08-2019"
                    android:textSize="13sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorTextGrayDark" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="20dp"
                    android:layout_alignParentLeft="true"
                    android:gravity="left|center_vertical"
                    android:fontFamily="@font/lineto_circular_pro_book"
                    android:visibility="visible"
                    android:text="@string/title_date_end"
                    android:layout_centerHorizontal="true"
                    android:maxLines="2"
                    android:textSize="13sp"
                    android:textColor="@color/colorTextGrayDark" />

                <TextView
                    android:layout_gravity="bottom|center_horizontal"
                    android:id="@+id/fechaFin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/lineto_circular_pro_book"
                    android:visibility="visible"
                    android:text="Miércoles, 15-08-2019"
                    android:textSize="13sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorTextGrayDark" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lineto_circular_pro_book"
                    android:visibility="visible"
                    android:gravity="left|center_vertical"
                    android:text="@string/title_holidays_days"
                    android:layout_alignParentLeft="true"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBackgroundCoppelNegro" />

                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="bottom|center_horizontal"
                        android:id="@+id/diasVacaciones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_toLeftOf="@+id/markerSplice"
                        android:fontFamily="@font/lineto_circular_pro_bold"
                        android:visibility="visible"
                        android:layout_centerVertical="true"
                        android:text="3 días"
                        android:textSize="13sp"
                        android:layout_marginRight="4dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorBackgroundCoppelNegro" />

                    <View
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:id="@+id/markerSplice"
                        android:layout_centerVertical="true"
                        android:background="@drawable/backgroud_circle_melon"
                        android:layout_width="8dp"
                        android:layout_height="8dp" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
