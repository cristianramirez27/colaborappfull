<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="44dp"
    android:layout_height="44dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgChat"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:backgroundTint="@color/gray_checkbox_disable"
            android:backgroundTintMode="add"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_zendesk_chat" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNotification"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignEnd="@+id/imgChat"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/ic_punto_rojo"
            android:fontFamily="@font/lineto_circular_pro_bold"
            android:gravity="center"
            android:textColor="@color/colorBackgroundCoppelBlanco"
            android:textSize="8sp"
            android:visibility="visible" />

    </RelativeLayout>

</RelativeLayout>