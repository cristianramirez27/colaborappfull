<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".views.activities.LoginActivity">


    <RelativeLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_weight="1.3">

        <ImageView
            android:id="@+id/imgvLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_logo_colaborapp" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="12dp"
        android:layout_weight="1">
        <com.coppel.rhconecta.dev.views.customviews.EditTextEmail
            android:id="@+id/cedtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.coppel.rhconecta.dev.views.customviews.EditTextPassword
            android:id="@+id/cedtPassword"
            android:layout_width="match_parent"
            android:layout_below="@+id/cedtEmail"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/txvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lineto_circular_pro_medium"
            android:layout_below="@+id/cedtPassword"
            android:gravity="center"
            android:text="@string/forgot_my_password"
            android:textColor="@color/colorBlueLight"
            android:textSize="12sp"
            android:layout_above="@+id/btnLogIn"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/btnLogIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_blue_rounded"
            android:fontFamily="@font/lineto_circular_pro_book"
            android:text="@string/login"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"
            android:layout_above="@+id/txvSignIn"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txvSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lineto_circular_pro_medium"
            android:text="@string/sign_in"
            android:textColor="@color/colorTextGrayDark"
            android:layout_above="@+id/txvJoin"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:textSize="12sp" />



        <TextView
            android:id="@+id/txvJoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lineto_circular_pro_medium"
            android:text="@string/join_us"
            android:textColor="@color/colorTextGrayDark"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:padding="2dp"
            android:textSize="12sp" />



    </RelativeLayout>


    <FrameLayout
        android:id="@+id/flLoginFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:elevation="2dp"
         />

</LinearLayout>