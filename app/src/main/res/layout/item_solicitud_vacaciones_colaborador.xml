<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:id="@+id/cardview"
    app:cardElevation="2dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginRight="1dp"
    android:layout_marginLeft="1dp"
    card_view:cardBackgroundColor="@color/colorBackgroundCoppelBlanco"
    app:cardCornerRadius="4dp">

    <RelativeLayout android:id="@+id/container_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="4dp">

        <RelativeLayout
            android:id="@+id/cbxLayout"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="60dp">

            <View
                android:id="@+id/markerSpliceLeft"
                android:background="@drawable/backgroud_circle_melon"
                android:layout_alignParentLeft="true"
                android:visibility="gone"
                android:layout_width="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:layout_height="8dp" />

            <com.coppel.rhconecta.dev.views.customviews.CircleImageView
                android:id="@+id/imgColaborador"
                android:layout_toRightOf="@+id/markerSpliceLeft"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp"
                android:padding="0dp"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/ic_account_white"
                android:backgroundTint="@color/colorGrisDeshabilitado"
                android:background="@drawable/bg_circle_shadow"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_toRightOf="@+id/cbxLayout"
            android:layout_width="match_parent"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="6dp"
            android:paddingTop="4dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <RelativeLayout
                android:visibility="visible"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:id="@+id/layoutEstatusContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nameColaborator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBackgroundCoppelNegro"
                    android:layout_alignParentTop="true"
                    style="@style/TextBold14Coppel"
                    android:text="Nombre"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutInicial"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:gravity="left|center_vertical"
                    android:layout_alignParentLeft="true"
                    android:text="@string/title_date_start"
                    style="@style/TextBook12Coppel"
                    android:textColor="@color/colorTextGrayDark"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/fechaInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="left|center_vertical"
                    android:text="Miércoles, 15-08-2019"
                    android:textColor="@color/colorTextGrayDark"
                    style="@style/TextMedium12Coppel"
                    android:visibility="visible" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutFinal"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="20dp"
                    android:layout_alignParentLeft="true"
                    android:gravity="left|center_vertical"
                    android:visibility="visible"
                    android:text="@string/title_date_end"
                    android:layout_centerHorizontal="true"
                    android:maxLines="2"
                    style="@style/TextBook12Coppel"
                    android:textColor="@color/colorTextGrayDark" />

                <TextView
                    android:layout_gravity="bottom|center_horizontal"
                    android:id="@+id/fechaFin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_alignParentRight="true"
                    android:visibility="visible"
                    android:text="Miércoles, 15-08-2019"
                    style="@style/TextMedium12Coppel"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorTextGrayDark" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutTotalDays"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:gravity="left|center_vertical"
                    android:text="@string/title_holidays_days"
                    android:layout_alignParentLeft="true"
                    style="@style/TextMedium12Coppel"
                    android:textColor="@color/colorBackgroundCoppelNegro" />

                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="bottom|center_horizontal"
                        android:id="@+id/diasVacaciones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        style="@style/TextMedium12Coppel"
                        android:layout_toLeftOf="@+id/markerSplice"
                        android:visibility="visible"
                        android:layout_centerVertical="true"
                        android:text="3 días"
                        android:layout_marginRight="4dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/colorBackgroundCoppelNegro" />

                    <View
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:id="@+id/markerSplice"
                        android:layout_centerVertical="true"
                        android:background="@drawable/backgroud_circle_melon"
                        android:layout_width="8dp"
                        android:layout_height="8dp" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
