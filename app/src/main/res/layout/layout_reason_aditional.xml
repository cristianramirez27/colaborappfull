<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@android:color/transparent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/background_dialog_white_rounded"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            app:cardCornerRadius="6dp"
            android:layout_margin="2dp"
            app:cardBackgroundColor="@color/colorBackgroundCoppelBlanco">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:fontFamily="@font/lineto_circular_pro_medium"
                    android:text="@string/title_reason_aditional_days"
                    android:textColor="@color/colorSecondBlueCoppel"
                    android:textSize="22sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@+id/title"
                    android:id="@+id/rcvFields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:scrollbarFadeDuration="1"
                    android:fadeScrollbars="true"
                    android:scrollbars="vertical"
                    android:layout_above="@+id/reason"
                    android:scrollbarSize="0.5dp"/>

                <EditText
                    android:id="@+id/reason"
                    android:layout_width="match_parent"
                    android:layout_above="@+id/layoutBtns"
                    android:layout_marginTop="8dp"
                    android:gravity="top"
                    android:padding="8dp"
                    android:textSize="13sp"
                    android:inputType="text"
                    android:importantForAutofill="no"
                    android:maxLength="200"
                    android:imeOptions="actionNext"
                    android:digits="abcdefghijklmnñopqrstuvwxyzáéíóúABCDEFGHIJKLMNÑOPQRSTUVWXYZÁÉÍÓÚ0123456789,.:;\n "
                    android:background="@drawable/background_gray_rounded"
                    android:layout_height="96dp" />

                <LinearLayout
                    android:id="@+id/layoutBtns"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnActionLeft"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_blue_rounded"
                        android:fontFamily="@font/lineto_circular_pro_book"
                        android:text="@string/cancel"
                        android:textAllCaps="false"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorBackgroundCoppelBlanco"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/btnActionRight"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/backgroud_rounder_grey"
                        android:fontFamily="@font/lineto_circular_pro_book"
                        android:text="@string/btn_title_authorize"
                        android:textAllCaps="false"
                        android:layout_marginLeft="10dp"
                        android:enabled="false"
                        android:textColor="@color/colorBackgroundCoppelBlanco"
                        android:textSize="16sp" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"/>

</LinearLayout>