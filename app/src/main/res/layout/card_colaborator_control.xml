<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rootView"
    android:orientation="vertical" >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/container_cardvide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/layoutColaboratorInfo"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.coppel.rhconecta.dev.views.customviews.CircleImageView
                    android:id="@+id/imgColaborador"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_circle_shadow"
                    android:layout_alignParentLeft="true"/>

                <RelativeLayout
                    android:layout_toRightOf="@+id/imgColaborador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp">

                    <TextView
                        android:layout_gravity="bottom|center_horizontal"
                        android:id="@+id/nombreColaborador"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:fontFamily="@font/lineto_circular_pro_bold"
                        android:visibility="visible"
                        android:text=""
                        android:layout_centerHorizontal="true"
                        android:textSize="16sp"
                        android:textColor="@color/colorBackgroundCoppelNegro" />

                    <TextView
                        android:layout_gravity="bottom|center_horizontal"
                        android:id="@+id/tituloNumeroColaborador"
                        android:layout_below="@+id/nombreColaborador"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:text="@string/number_colaborator"
                        android:textSize="14sp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorTextGrayDark" />

                    <TextView
                        android:layout_gravity="bottom|center_horizontal"
                        android:id="@+id/numColaborador"
                        android:layout_toRightOf="@+id/tituloNumeroColaborador"
                        android:layout_below="@+id/nombreColaborador"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:visibility="visible"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="@color/colorTextBlueCoppel" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tituloControl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text=""
                    android:fontFamily="@font/lineto_circular_pro_medium"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/colorBackgroundCoppelNegro"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <TextView
                    android:layout_gravity="bottom|center_horizontal"
                    android:id="@+id/numeroControl"
                    android:layout_toRightOf="@+id/tituloControl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/descripcion"
                    android:fontFamily="@font/lineto_circular_pro_medium"
                    android:visibility="visible"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/colorTextGrayDark" />

                <TextView
                    android:layout_gravity="bottom|center_horizontal"
                    android:id="@+id/descripcion"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:visibility="visible"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/lineto_circular_pro_medium"
                    android:textSize="14sp"
                    android:textColor="@color/colorBackgroundCoppelNegro" />

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_toRightOf="@+id/imgColaborador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lineto_circular_pro_book"
                        android:gravity="left"
                        android:text="Itinerario"
                        android:textColor="@color/colorTextGray"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/itinerario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lineto_circular_pro_book"
                        android:gravity="left"
                        android:textColor="@color/colorBackgroundCoppelNegro"
                        android:textSize="11sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_toRightOf="@+id/imgColaborador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lineto_circular_pro_book"
                        android:text="Fechas"
                        android:textColor="@color/colorTextGray"
                        android:textSize="11sp"
                        android:gravity="left"/>

                    <TextView
                        android:id="@+id/fechas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lineto_circular_pro_book"
                        android:text=""
                        android:textColor="@color/colorBackgroundCoppelNegro"
                        android:textSize="11sp"
                        android:gravity="left"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_toRightOf="@+id/imgColaborador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:layout_marginLeft="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lineto_circular_pro_book"
                        android:text="Estatus"
                        android:textColor="@color/colorTextGray"
                        android:textSize="11sp"
                        android:gravity="left"/>

                    <LinearLayout
                        android:id="@+id/layoutStatus"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="vertical"
                        android:layout_gravity="left"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="8dp"
                        android:padding="2dp"
                        android:gravity="left|center_vertical">

                        <TextView
                            android:id="@+id/status"
                            android:layout_width="match_parent"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:minHeight="40dp"
                            android:padding="3dp"
                            android:lineSpacingMultiplier="1.1"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:textColor="@color/colorBackgroundCoppelNegro"
                            android:textSize="9sp"
                            android:visibility="visible" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>





