<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.releases.ReleasesActivity">

    <fragment
        android:id="@+id/pollToolbarFragment"
        android:name="com.coppel.rhconecta.dev.presentation.poll_toolbar.PollToolbarFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvReleases"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:listitem="@layout/fila_lista_comunicados"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pollToolbarFragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tvNotAvailableReleases"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/not_available_releases"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginStart="@dimen/lateral_margin"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_marginEnd="@dimen/lateral_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pollToolbarFragment"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/pbLoader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/rvReleases"
        app:layout_constraintTop_toTopOf="@id/rvReleases"
        app:layout_constraintEnd_toEndOf="@id/rvReleases"
        app:layout_constraintBottom_toBottomOf="@id/rvReleases"/>

</android.support.constraint.ConstraintLayout>