<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">


        <com.carlosmuvi.segmentedprogressbar.SegmentedProgressBar
                android:id="@+id/segmented_progressbar"
                android:layout_width="match_parent"
                app:fill_color="@color/colorBlueLight"
                app:container_color="@color/gray_calculator"
                android:layout_height="5dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/title_dashboard_top_calculator"
                android:layout_marginStart="@dimen/title_dashboard_sides_calculator"
                android:layout_marginEnd="@dimen/title_dashboard_sides_calculator"/>

        <TextView
                android:id="@+id/section_label"
                android:text="23/01/2023"
                style="@style/TextBook16CoppelCalculator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_constraintTop_creator="1"
                tools:layout_constraintLeft_creator="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView16"/>
        <TextView
                android:text="@string/title_dashboard_calculator"
                style="@style/TextBold20CoppelCalculator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView16"
                android:layout_marginTop="@dimen/title_dashboard_top_calculator"
                app:layout_constraintTop_toBottomOf="@+id/segmented_progressbar" android:layout_marginEnd="177dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="176dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>