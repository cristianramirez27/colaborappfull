<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@android:color/transparent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/background_dialog_white_rounded"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="8dp"
            app:cardCornerRadius="6dp"
            android:layout_margin="2dp"
            app:cardBackgroundColor="@color/colorBackgroundCoppelBlanco">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Observaciones (Opcional)"
                    style="@style/TextBold20Coppel"
                    android:textColor="@color/colorSecondBlueCoppel"/>

                <TextView
                    android:layout_below="@+id/title"
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextBook14Coppel"
                    android:text="@string/subtitle_observation_authorize"
                    android:textColor="@color/colorTextGrayDark"/>

                <EditText
                    android:layout_below="@+id/subtitle"
                    android:id="@+id/observations"
                    android:layout_width="match_parent"
                    android:layout_above="@+id/layoutBtns"
                    android:hint="@string/hint_observation_days"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"
                    android:gravity="top"
                    android:padding="8dp"
                    android:inputType="text"
                    style="@style/TextBook12Coppel"
                    android:importantForAutofill="no"
                    android:imeOptions="actionNext"
                    android:digits="abcdefghijklmnñopqrstuvwxyzáéíóúABCDEFGHIJKLMNÑOPQRSTUVWXYZÁÉÍÓÚ0123456789,.:;\n "
                    android:background="@drawable/background_gray_rounded"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/layoutBtns"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnActionLeft"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_blue_rounded"
                        android:text="@string/cancel"
                        android:textAllCaps="false"
                        style="@style/ButtonCoppel"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorBackgroundCoppelBlanco"/>

                    <Button
                        android:id="@+id/btnActionRight"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/backgroud_rounder_grey"
                        android:text="@string/send"
                        android:textAllCaps="false"
                        style="@style/ButtonCoppel"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorBackgroundCoppelBlanco"/>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"/>

</LinearLayout>