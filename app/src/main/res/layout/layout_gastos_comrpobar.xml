<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <TextView
        android:id="@+id/tipoItinerario"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lineto_circular_pro_bold"
        android:visibility="visible"
        android:text="Gastos por comprobar"
        android:textSize="16sp"
        android:paddingLeft="8dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBackgroundCoppelNegro" />

    <LinearLayout
        android:id="@+id/headerItinerario"
        android:layout_width="match_parent"
        android:padding="4dp"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:visibility="visible">


       <com.coppel.rhconecta.dev.views.customviews.HeaderTitlesExpensesList
          android:id="@+id/headerExpenses"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"></com.coppel.rhconecta.dev.views.customviews.HeaderTitlesExpensesList>


        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/rcvGastosComprobar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <com.coppel.rhconecta.dev.views.customviews.HeaderTitlesList
        android:id="@+id/totales"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.coppel.rhconecta.dev.views.customviews.HeaderTitlesList>



</LinearLayout>

