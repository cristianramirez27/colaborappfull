<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comunicadoFila"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/imgVideoPreview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_image_grey_300_24dp" />

    <LinearLayout
        android:id="@+id/llHeaderContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgVideoPreview"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ivWatchedIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="9dp"
            app:srcCompat="@drawable/ic_punto_rojo" />

        <TextView
            android:id="@+id/labelTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"
            tools:text="Episodio #1"
            android:layout_marginEnd="9dp"
            android:textColor="@color/colorPrimaryCoppelAzul"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/labelActualizado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundbackgroud"
            android:paddingVertical="4dp"
            android:paddingHorizontal="16dp"
            android:text="@string/visionaries_updated_label"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:backgroundTint="#6dc30e"
            android:textSize="11sp"
            android:visibility="gone"
            tools:visibility="visible"
            tools:targetApi="lollipop"
            tools:ignore="SmallSp" />

    </LinearLayout>

    <TextView
        android:id="@+id/labelFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:textColor="@color/colorSecundaryCoppelGris"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/labelVisitas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/labelVisitas"
        tools:ignore="SmallSp"
        tools:text="01-01-2020" />

    <TextView
        android:id="@+id/labelVisitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundbackgroud"
        android:paddingVertical="4dp"
        android:paddingHorizontal="16dp"
        tools:text="8 Vistas"
        android:textColor="@color/colorTextCoppelNegro"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@id/llHeaderContainer"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="SmallSp" />

    <View
        android:id="@+id/divisor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorBackgroundCoppelGris2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/labelVisitas"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>