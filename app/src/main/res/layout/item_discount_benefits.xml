<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardViewDiscounts"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="1dp"
        app:cardBackgroundColor="@color/colorBackgroundCoppelBlanco">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageBenefits"
                android:layout_width="109dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_general"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_margin="4dp"
                android:src="@drawable/placeholder_discount"/>


            <TextView
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lineto_circular_pro_medium"
                android:text="30%"
                android:padding="4dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorBackgroundCoppelNegro"
                android:textSize="18sp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>



