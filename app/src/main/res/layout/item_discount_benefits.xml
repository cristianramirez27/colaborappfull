<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools" android:id="@+id/cardViewDiscounts"
                                   android:layout_alignParentTop="true"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:minHeight="180dp"
                                   android:layout_marginTop="7dp"
                                   android:layout_marginBottom="7dp"
                                   android:layout_marginLeft="5dp"
                                   android:layout_marginRight="5dp"
                                   app:cardElevation="4dp"
                                   app:cardCornerRadius="4dp"
                                   app:cardBackgroundColor="@color/colorBackgroundCoppelBlanco">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="180dp"
            android:layout_width="match_parent">

        <ImageView
                android:id="@+id/imageBenefits"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingRight="16dp"
                android:paddingLeft="16dp"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:layout_centerHorizontal="true"
                android:layout_margin="4dp"
                android:src="@drawable/placeholder_discount" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/divider"
                app:layout_constraintVertical_bias="0.333" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp" android:layout_marginStart="16dp" android:layout_marginBottom="16dp"/>
        <LinearLayout
                android:id="@+id/divider"
                android:orientation="horizontal"
                android:layout_below="@+id/imageBenefits"
                android:layout_width="match_parent"
                android:background="@color/colorBackgroundDivider"
                android:layout_height="1dp"
                app:layout_constraintBottom_toTopOf="@+id/discount">
        </LinearLayout>

        <TextView
                android:id="@+id/discount"
                android:layout_below="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:lines="2"
                android:textAllCaps="false"
                android:gravity="right|center_vertical"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                style="@style/TextBold12Coppel"
                android:textColor="@color/colorBackgroundCoppelNegro"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>



