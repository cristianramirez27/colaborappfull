<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ctlContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgvArrow"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/txvPayroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txvPayroll"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_down_arrow_blue" />

    <TextView
        android:id="@+id/txvPayroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:maxLines="1"
        android:text="$0.00"
        android:textColor="@color/colorSecondBlueCoppel"
        style="@style/TextBook14Coppel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgvArrow"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txvDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="- 00/00/0000"
        android:textColor="@color/colorTextGray"
        style="@style/TextBook14Coppel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgvMail"
        app:layout_constraintStart_toEndOf="@+id/txvPayroll"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgvMail"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgvDownload"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_email_gray" />

    <ImageView
        android:id="@+id/imgvDownload"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_download_gray" />

</androidx.constraintlayout.widget.ConstraintLayout>