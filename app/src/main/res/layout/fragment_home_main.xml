<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".presentation.home.HomeMainFragment">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackgroundCoppelBlanco"
            android:orientation="vertical">

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v4.view.ViewPager
                    android:id="@+id/vpBanner"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:focusableInTouchMode="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.github.vivchar.viewpagerindicator.ViewPagerIndicator
                    android:id="@+id/tabIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    app:delimiterSize="8dp"
                    app:itemScale="1.5"
                    app:itemSelectedTint="@color/transparentIndicatorSelected"
                    app:itemSize="10dp"
                    app:itemTint="@color/transparentIndicator"
                    app:layout_constraintBottom_toBottomOf="@+id/vpBanner"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </android.support.design.widget.CoordinatorLayout>

            <TextView
                android:id="@+id/txvFavorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lineto_circular_pro_book"
                android:text="@string/my_favorites"
                android:textColor="@color/colorSecondBlueCoppel"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/lateral_margin"
                android:layout_marginTop="@dimen/half_vertical_margin" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcvMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="false"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:layout_marginTop="@dimen/half_vertical_margin"/>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/pbLoader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

    </android.support.design.widget.CoordinatorLayout>

</android.support.v4.widget.NestedScrollView>
