<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.poll.PollActivity">

    <include
        android:id="@+id/app_bar_main"
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/pbPollProgress"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:theme="@style/HorizontalProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_main"
        app:layout_constraintEnd_toEndOf="parent"
        tools:progress="20"
        android:max="100"/>

    <TextView
        android:id="@+id/tvPollProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/poll_progress"
        android:textColor="@color/colorSecundaryCoppelGris"
        android:textSize="11sp"
        tools:ignore="SmallSp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="@dimen/lateral_margin"
        app:layout_constraintTop_toBottomOf="@id/pbPollProgress"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/lorem"
        android:textColor="@color/colorTextCoppelNegro"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/lateral_margin"
        android:layout_marginTop="@dimen/half_vertical_margin"
        android:layout_marginEnd="@dimen/lateral_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPollProgress"/>

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/lorem"
        android:textColor="@color/colorTextCoppelNegro"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_marginStart="@dimen/lateral_margin"
        android:layout_marginEnd="@dimen/lateral_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RadioGroup
        android:id="@+id/rgAnswers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="@dimen/lateral_margin"
        android:layout_marginTop="@dimen/half_vertical_margin"
        android:paddingEnd="@dimen/lateral_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvQuestion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@color/colorPrimaryCoppelAzul"
        android:elevation="8dp"
        android:text="@string/next"
        android:textColor="@color/colorSecundaryCoppelBlanco"
        android:visibility="gone"
        tools:visibility="visible"
        android:padding="8dp"
        android:layout_marginEnd="@dimen/lateral_margin"
        android:layout_marginBottom="@dimen/vertical_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:targetApi="lollipop" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFinish"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:background="@color/colorPrimaryCoppelAzul"
        android:elevation="8dp"
        android:text="@string/send_poll"
        android:textColor="@color/colorSecundaryCoppelBlanco"
        android:visibility="gone"
        android:padding="8dp"
        android:layout_marginBottom="@dimen/vertical_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:targetApi="lollipop" />

    <ProgressBar
        android:id="@+id/pbLoader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>