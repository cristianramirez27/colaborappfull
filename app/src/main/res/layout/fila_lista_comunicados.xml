<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comunicadoFila"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:paddingStart="0dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp">

    <RelativeLayout
        android:id="@+id/containerMesPasado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iconoFlechaAbajo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="4dp"
            app:srcCompat="@drawable/ic_flecha_dropdown" />

        <TextView
            android:id="@+id/labelMes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iconoFlechaAbajo"
            android:layout_marginLeft="20dp"
            android:text="MES PASADO" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignStart="@+id/labelMes"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorSecundaryCoppelGris" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardFila"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/containerMesPasado"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp">

            <ImageView
                android:id="@+id/iconoNuevo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_punto_rojo" />

            <TextView
                android:id="@+id/labelTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:textColor="@color/colorPrimaryCoppelAzul"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iconoNuevo"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Cambio de Director: Diego.." />

            <TextView
                android:id="@+id/labelFecha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSecundaryCoppelGris"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/labelTitulo"
                app:layout_constraintTop_toBottomOf="@id/labelTitulo"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="29-04-2020" />

            <TextView
                android:id="@+id/labelActualizado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/roundbackgroud"
                android:backgroundTint="#6dc30e"
                android:paddingHorizontal="16dp"
                android:paddingVertical="4dp"
                android:text="@string/visionaries_updated_label"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelTitulo"
                tools:ignore="SmallSp"
                tools:targetApi="lollipop"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>