<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/ctLogin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroun_card_login_microsoft">

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="16dp"
        android:fontFamily="@font/lineto_circular_pro_book"
        android:text="@string/login_microsoft_text"
        android:textAlignment="center"
        android:textColor="@color/colorTextBlueCoppel"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnLogInMicrosoft"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnLogInMicrosoft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="16dp"
        android:background="@drawable/background_btn_login_microsoft"
        android:drawableStart="@drawable/ic_autobus"
        android:fontFamily="@font/lineto_circular_pro_book"
        android:paddingLeft="20dp"
        android:text="@string/login_microsoft"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLogin" />

</androidx.constraintlayout.widget.ConstraintLayout>

