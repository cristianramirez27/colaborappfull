<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryBlueCoppel</item>
        <item name="colorAccent">@color/colorYellowCoppel</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_left_arrow_black</item>
    </style>

    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/lineto_circular_pro_book</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


