<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.coppel.rhconecta.dev">

    <application
        android:name=".CoppelApp"
        android:allowBackup="true"
        android:appComponentFactory="whateverString"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:appComponentFactory">
        <activity
            android:name=".views.activities.SplashScreenActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activities.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activities.HomeActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.poll.PollActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".visionarios.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".visionarios.inicio.views.InicioActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".visionarios.comunicados.views.ComunicadosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.releases.ReleasesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.release_detail.ReleaseDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.visionaries.VisionariesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.visionary_detail.VisionaryDetailActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.visionary_full_screen.VisionaryDetailFullScreenActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".visionarios.comunicados.views.ComunicadosDetalleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".visionarios.videos.views.VideosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".visionarios.videos.views.VideosDetalleActivity"
            android:configChanges="screenSize|orientation" />
        <activity
            android:name=".visionarios.encuestas.views.EncuestaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".visionarios.videos.views.VideosFullScreenActivity"
            android:configChanges="screenSize|orientation" />
        <activity
            android:name=".views.activities.ConfigLetterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".views.activities.DialogAlertActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize|adjustPan" />
        <activity
            android:name=".views.activities.BenefitsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize|adjustPan" />
        <activity
            android:name=".views.activities.FondoAhorroActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".views.activities.GastosViajeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".views.activities.GastosViajeDetalleActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".views.activities.VacacionesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateAlwaysHidden" /> <!-- android:windowSoftInputMode="adjustResize" -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/icn_notificaciones_blanco" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorSecondBlueCoppel" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.coppel.rhconecta.dev.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />
        </provider>

        <service
            android:name=".visionarios.firebase.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".visionarios.firebase.MyFirebaseInstanceIDService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest>