<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.coppel.rhconecta.dev"
    tools:ignore="LockedOrientationActivity,UnusedAttribute">

    <application
        android:name=".CoppelApp"
        android:allowBackup="true"
        android:appComponentFactory="whateverString"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:appComponentFactory">
        <activity
            android:name=".presentation.splash.SplashScreenActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activities.LoginActivity"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity
            android:name=".views.activities.HomeActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".presentation.poll.PollActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".visionarios.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".presentation.releases.ReleasesActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".presentation.release_detail.ReleaseDetailActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".presentation.visionaries.VisionariesActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".presentation.visionary_detail.VisionaryDetailActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".presentation.visionary_full_screen.VisionaryDetailFullScreenActivity"
            android:hardwareAccelerated="true"
            android:configChanges="screenSize|orientation"
            android:exported="false" />
        <activity
            android:name=".views.activities.ConfigLetterActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".views.activities.DialogAlertActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize|adjustPan"
            android:exported="false" />
        <activity
            android:name=".views.activities.BenefitsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize|adjustPan"
            android:exported="false" />
        <activity
            android:name=".views.activities.FondoAhorroActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize"
            android:exported="false" />
        <activity
            android:name=".views.activities.GastosViajeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize"
            android:exported="false" />
        <activity
            android:name=".views.activities.QrCodeActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".views.activities.GastosViajeDetalleActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize"
            android:exported="false" />
        <activity
            android:name=".views.activities.VacacionesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:exported="false" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/icn_notificaciones_blanco" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorSecondBlueCoppel" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.coppel.rhconecta.dev.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />
        </provider>


        <service
            android:name=".system.notification.CoppelFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service
            android:name=".visionarios.firebase.MyFirebaseInstanceIDService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

</manifest>